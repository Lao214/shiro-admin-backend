<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shiro.dao.BRoleMapper">


    <resultMap id="RoleMap" type="com.example.shiro.entity.BRole" autoMapping="true"></resultMap>

    <!--条件分页查询-->
    <select id="selectPage" resultMap="RoleMap">
        SELECT id,role_name,create_time
        FROM b_role
        <where>
            <if test="vo.roleName != null and vo.roleName != ''">
                and role_name LIKE CONCAT('%',#{vo.roleName},'%')
            </if>
        </where>
        order by id desc
    </select>
</mapper>
